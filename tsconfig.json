{
  "compilerOptions": {
    "target": "ESNext",                 // para melhor suporte de recursos modernos
    "module": "ESNext",                 // para que Vite resolva ESM
    "moduleResolution": "Node",        // compatível com import/export de bibliotecas
    "strict": true,
    "esModuleInterop": true,
        "outDir": "./dist",

    "skipLibCheck": true,              // evita erros com @types externos
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",                // opcional: para usar paths relativos mais fáceis
    "types": []                        // ✅ OK se não usa Node no runtime
  },
  "include": ["./src/**/*"],
}
